#include <iostream>
using namespace std;
int main() {
    int arr[50],n,i,f=0,c=0,x,a,b;
    cout<<"enter limit of array \n";
    cin>>n;
    cout<<"enter elements \n";
    for(i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    cout<<"enter element to search \n";
    cin>>x;
    a=0;
    b=2;
    while(x>=a)
    {
        c=c+1;
        if(x>=arr[a] and x<=arr[b])
        {
            if(x==arr[a] or x==arr[b])
            {
                f=2;
                break;
            }
            f=1;
            break;
        }
        a=b;
        b=b*2;
    }
    if(f==1)
    {
        for(i=a+1;i<b;i++)
        {
            c=c+1;
            if(x<arr[i])
            {
                break;
            }
            if(arr[i]==x)
            {
                f=2;
                break;
            }
        }
    }
    if(f==0 or f==1)
    {
        cout<<"not found   "<<c<<endl;
    }
    if(f==2)
    {
        cout<<"found    "<<c<<endl;
    }
    return 0;
}
